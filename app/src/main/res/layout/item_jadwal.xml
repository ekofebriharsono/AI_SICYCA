<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/EdNamaMatkul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Kelas"
                android:textColor="@color/bg_black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/EdKelas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(Kelas)"
                android:textColor="@color/bg_black"
                android:textSize="18dp"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/EdTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_today"
                android:text="20:06"
                android:textColor="@color/bg_black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/EdWaktu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableStart="@drawable/ic_access_time"
                android:text="20:06"
                android:textColor="@color/bg_black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/EdLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:drawableStart="@drawable/ic_location"
                android:text="B805"
                android:textColor="@color/bg_black"
                android:textSize="10dp"
                android:visibility="visible" />

        </LinearLayout>

        <TextView
            android:id="@+id/EdNamaDosen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:drawableStart="@drawable/ic_school"
            android:text="Maseko"
            android:textColor="@color/bg_black"
            android:textSize="14dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/Edhadir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_done_all"
            android:text="Dosen Hadir"
            android:textColor="@color/bg_black"
            android:textSize="12dp"
            android:visibility="gone" />


    </LinearLayout>


</android.support.v7.widget.CardView>